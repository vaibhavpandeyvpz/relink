{% extends 'base.html.twig' %}

{% block title %}{{ link.metaTitle }}{% endblock %}

{% block metatags %}
    <meta http-equiv="refresh" content="{{ settings.interstitial_delay }}; URL='{{ link.target }}'">
    {% if link.metaDescription is not empty %}
        <meta name="description" content="{{ link.metaDescription }}">
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body, html {
            height: 100%;
            width: 100%;
        }
        body {
            display: flex;
        }
        p {
            word-break: break-all;
        }
    </style>
{% endblock %}

{% block head %}
    {{ parent() }}
    {% if settings.tracking_scripts_head is not empty %}
        {{ settings.tracking_scripts_head|raw }}
    {% endif %}
{% endblock %}

{% block body %}
    <main class="container text-center m-auto">
        <h1><i class="fas fa-sync fa-spin text-primary mr-1"></i> {{ 'Redirectingâ€¦'|trans }}</h1>
        <p class="text-muted">{{ 'Please wait while we send you to'|trans }} <a href="{{ link.target }}">{{ link.target }}</a></p>
    </main>
    {% if settings.tracking_scripts_body is not empty %}
        {{ settings.tracking_scripts_body|raw }}
    {% endif %}
{% endblock %}
